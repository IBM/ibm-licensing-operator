spec:
  {{- $imagePullData := dict -}}

  {{- /* Set license */ -}}
  {{- $_ := set $imagePullData "license" (dict "accept" .Values.global.licenseAccept) -}}

  {{- /* If imagePullSecret is declared, append it to the list of secrets specified in IBMLicensing CR's spec (or create a new list if empty) */ -}}
  {{- if .Values.global.imagePullSecret -}}
    {{- $_ := set $imagePullData "imagePullSecrets" (prepend (default list .Values.ibmLicenseService.spec.imagePullSecrets) .Values.global.imagePullSecret | uniq) -}}
  {{- end -}}

  {{- toYaml (mergeOverwrite .Values.ibmLicenseService.spec $imagePullData) | nindent 2 }}
